<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/recordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Best Record:"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shuffleBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/shuffle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:tint="@color/shuffleBtnColor" />

    <ImageView
        android:id="@+id/goBackbtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/go_back_btn_back"
        android:paddingStart="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/textColor" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/go_back_btn_back"
        app:layout_constraintBottom_toBottomOf="@+id/goBackbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="@+id/goBackbtn"
        app:layout_constraintTop_toTopOf="@+id/goBackbtn">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Moves: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/movesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Time: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="0:00"
                android:textColor="@color/textColor"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="00"
                android:text="1"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="01"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="02"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="03"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="10"
                android:text="5"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="11"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="12"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="13"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button9"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="20"
                android:text="9"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="21"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="22"
                android:text="11"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="23"
                android:text="12"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button13"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="30"
                android:text="13"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="31"
                android:text="14"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="32"
                android:text="15"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="btnClick"
                android:tag="33"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="37sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>